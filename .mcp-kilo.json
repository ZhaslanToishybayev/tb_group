{
  "mcpServers": {
    "task-master-ai": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "task-master-ai"
      ],
      "env": {
        "ANTHROPIC_API_KEY": "YOUR_ANTHROPIC_API_KEY_HERE",
        "PERPLEXITY_API_KEY": "YOUR_PERPLEXITY_API_KEY_HERE",
        "OPENAI_API_KEY": "YOUR_OPENAI_KEY_HERE",
        "GOOGLE_API_KEY": "YOUR_GOOGLE_KEY_HERE",
        "XAI_API_KEY": "YOUR_XAI_KEY_HERE",
        "OPENROUTER_API_KEY": "YOUR_OPENROUTER_KEY_HERE",
        "MISTRAL_API_KEY": "YOUR_MISTRAL_KEY_HERE",
        "AZURE_OPENAI_API_KEY": "YOUR_AZURE_KEY_HERE",
        "OLLAMA_API_KEY": "YOUR_OLLAMA_API_KEY_HERE"
      }
    },
    "kilo-code": {
      "type": "stdio",
      "command": "node",
      "args": [
        ".kilo/mcp-server.js"
      ],
      "env": {
        "KILO_API_KEY": "b96dba2582c349a5a2e44f90f3bca2c5.k5azyANSMElthCGC",
        "KILO_MODEL": "glm-4.6",
        "KILO_BASE_URL": "https://api.z.ai/api/paas/v4/"
      }
    },
    "claude-code": {
      "type": "stdio",
      "command": "claude",
      "args": [
        "mcp"
      ],
      "env": {
        "ANTHROPIC_API_KEY": "YOUR_ANTHROPIC_API_KEY_HERE"
      }
    },
    "spec-kit": {
      "type": "stdio",
      "command": "node",
      "args": [
        ".specify/scripts/mcp-server.js"
      ],
      "env": {
        "SPEC_KIT_ROOT": "./spec-kit",
        "PROJECT_ROOT": "./tb-group"
      }
    }
  }
}