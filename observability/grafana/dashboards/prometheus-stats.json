{
  "dashboard": {
    "id": null,
    "title": "Prometheus - Stats",
    "tags": ["prometheus"],
    "timezone": "browser",
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Prometheus Uptime",
        "type": "stat",
        "gridPos": { "x": 0, "y": 0, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "time() - process_start_time_seconds{job=\"prometheus\"}",
            "refId": "A",
            "legendFormat": "Uptime"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s"
          }
        }
      },
      {
        "id": 2,
        "title": "Total Samples Ingested",
        "type": "stat",
        "gridPos": { "x": 6, "y": 0, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "prometheus_tsdb_head_samples_appended_total",
            "refId": "A",
            "legendFormat": "Samples"
          }
        ]
      },
      {
        "id": 3,
        "title": "Targets Up",
        "type": "stat",
        "gridPos": { "x": 12, "y": 0, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "up",
            "refId": "A",
            "legendFormat": "{{job}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "green", "value": 1}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Ingestion Rate (samples/sec)",
        "type": "graph",
        "gridPos": { "x": 0, "y": 4, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "rate(prometheus_tsdb_head_samples_appended_total[5m])",
            "refId": "A",
            "legendFormat": "Samples/sec"
          }
        ]
      },
      {
        "id": 5,
        "title": "Memory Usage",
        "type": "graph",
        "gridPos": { "x": 12, "y": 4, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "process_resident_memory_bytes{job=\"prometheus\"}",
            "refId": "A",
            "legendFormat": "Memory"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "bytes"
          }
        }
      },
      {
        "id": 6,
        "title": "CPU Usage",
        "type": "graph",
        "gridPos": { "x": 0, "y": 12, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "rate(process_cpu_seconds_total{job=\"prometheus\"}[5m]) * 100",
            "refId": "A",
            "legendFormat": "CPU %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "max": 100,
            "min": 0
          }
        }
      },
      {
        "id": 7,
        "title": "Series Count",
        "type": "graph",
        "gridPos": { "x": 12, "y": 12, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "prometheus_tsdb_head_series",
            "refId": "A",
            "legendFormat": "Series"
          }
        ]
      },
      {
        "id": 8,
        "title": "Scrape Duration",
        "type": "graph",
        "gridPos": { "x": 0, "y": 20, "w": 24, "h": 8 },
        "targets": [
          {
            "expr": "rate(prometheus_target_scrapes_duration_seconds_sum[5m]) / rate(prometheus_target_scrapes_duration_seconds_count[5m])",
            "refId": "A",
            "legendFormat": "{{job}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s"
          }
        }
      }
    ]
  },
  "folderId": null,
  "overwrite": true
}
