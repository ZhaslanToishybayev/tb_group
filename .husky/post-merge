#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Color codes for output
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

echo -e "${YELLOW}üîÑ Post-merge hook running...${NC}\n"

# Check if dependencies were updated
if [ -f "package-lock.json" ] || [ -f "pnpm-lock.yaml" ] || [ -f "yarn.lock" ]; then
  echo -e "${YELLOW}üì¶ Detected dependency lock file changes${NC}"
  echo -e "${GREEN}Installing/updating dependencies...${NC}\n"

  if command -v pnpm &> /dev/null; then
    pnpm install
  elif command -v yarn &> /dev/null; then
    yarn install
  elif command -v npm &> /dev/null; then
    npm install
  else
    echo -e "${YELLOW}‚ö†Ô∏è  No package manager found. Please install dependencies manually.${NC}"
  fi

  echo -e "${GREEN}‚úÖ Dependencies updated!${NC}\n"
else
  echo -e "${GREEN}‚ÑπÔ∏è  No dependency changes detected${NC}"
fi

# Check if there are any TypeScript compilation errors
echo -e "${YELLOW}üîé Checking TypeScript compilation...${NC}"
npx tsc --noEmit --skipLibCheck

if [ $? -eq 0 ]; then
  echo -e "${GREEN}‚úÖ TypeScript compilation successful${NC}\n"
else
  echo -e "${YELLOW}‚ö†Ô∏è  TypeScript compilation failed. Please fix type errors.${NC}\n"
fi

# Check if Task Master is initialized and show status
if [ -d ".taskmaster" ]; then
  echo -e "${YELLOW}üìã Checking Task Master status...${NC}"

  if command -v task-master &> /dev/null; then
    echo -e "${GREEN}Task Master is installed${NC}"
    echo -e "${YELLOW}Current task status:${NC}"

    # Show next task (ignore errors if no tasks)
    task-master next 2>/dev/null || echo -e "${YELLOW}No pending tasks found${NC}"

    echo -e "${GREEN}‚úÖ Task Master check complete${NC}\n"
  else
    echo -e "${YELLOW}‚ö†Ô∏è  Task Master not found in PATH${NC}"
    echo -e "${YELLOW}You can initialize it with: task-master init${NC}\n"
  fi
else
  echo -e "${YELLOW}‚ÑπÔ∏è  Task Master not initialized in this project${NC}\n"
fi

echo -e "${GREEN}üéâ Post-merge checks complete!${NC}"
echo -e "${GREEN}You're ready to continue development.${NC}\n"

exit 0
