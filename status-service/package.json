{
  "name": "@tb/status-service",
  "version": "1.0.0",
  "description": "TB Group Status Service - Incident tracking and status page",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "vitest",
    "test:ci": "vitest run --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "dev:seed": "tsx src/scripts/seed.ts",
    "demo": "tsx src/scripts/demo.ts",
    "demo:server": "tsx src/server.ts"
  },
  "dependencies": {
    "better-sqlite3": "^9.2.2",
    "express": "^4.21.2",
    "pino": "^9.0.0",
    "pino-http": "^11.0.0",
    "prom-client": "^15.1.3",
    "pug": "^3.0.3",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/express": "^4.17.25",
    "@types/node": "^20.10.0",
    "@types/pug": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "supertest": "^6.3.3",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^4.0.6"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
