# =============================================================================
# TB Group Base Stack - Environment Configuration Template
# =============================================================================
# Copy this file to .env and fill in your actual values
# The .env file is gitignored and should never be committed
# =============================================================================

# API Keys for Task Master (Optional - at least one required)
OPENAI_API_KEY="your_openai_api_key_here"
OPENROUTER_API_KEY="your_openrouter_api_key_here"
ANTHROPIC_API_KEY="your_anthropic_api_key_here"
PERPLEXITY_API_KEY="your_perplexity_api_key_here"

# For reCAPTCHA on web (Required for production)
NEXT_PUBLIC_RECAPTCHA_SITE_KEY="your_recaptcha_site_key_here"
RECAPTCHA_SECRET="your_recaptcha_secret_key_here"

# For database
DATABASE_URL="postgresql://postgres:postgres@localhost:5433/tbgroup"

# For authentication
JWT_ACCESS_SECRET="change-me-access-secret"
JWT_REFRESH_SECRET="change-me-refresh-secret"
JWT_REFRESH_EXP_DAYS="30"
ADMIN_BOOTSTRAP_EMAIL="admin@example.com"
ADMIN_BOOTSTRAP_PASSWORD="changeMe123!"

# Bitrix24 / Email integrations
BITRIX24_WEBHOOK_URL=""
BITRIX24_USE_STUB="true"

# Enhanced Bitrix24 Settings
BITRIX24_DOMAIN=""
BITRIX24_ASSIGNED_ID=""
BITRIX24_CATEGORY_ID=""
BITRIX24_STATUS_ID="NEW"
BITRIX24_SOURCE_ID="WEB"
BITRIX24_CURRENCY_ID="KZT"
BITRIX24_CUSTOM_FIELDS=""
BITRIX24_ENABLE_LOGGING="true"
BITRIX24_RETRY_ATTEMPTS="3"
BITRIX24_RETRY_DELAY="1000"

# Primary SMTP Provider
SMTP_HOST="smtp.example.com"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER="user"
SMTP_PASS="pass"
SMTP_FROM="TB Group <no-reply@example.com>"

# Backup SMTP Provider (fallback)
SMTP_BACKUP_HOST="backup-smtp.example.com"
SMTP_BACKUP_PORT="587"
SMTP_BACKUP_SECURE="false"
SMTP_BACKUP_USER="backup_user"
SMTP_BACKUP_PASS="backup_pass"
SMTP_BACKUP_FROM="TB Group Backup <no-reply-backup@example.com>"

# Email Settings
EMAIL_NOTIFICATIONS_TO="sales@example.com,team@example.com"
EMAIL_USE_STUB="true"
EMAIL_QUEUE_ENABLED="true"
EMAIL_RETRY_ATTEMPTS="3"
EMAIL_RETRY_DELAY="300"

# Analytics Integration
GA4_MEASUREMENT_ID=""
YANDEX_METRICA_COUNTER_ID=""
GOOGLE_ANALYTICS_ENABLED="true"
YANDEX_METRICA_ENABLED="true"
ANALYTICS_TRACKING_ENABLED="true"
ANALYTICS_RETENTION_DAYS="365"

# Cache and Backups
REDIS_URL=""
CACHE_TTL="3600"
BACKUP_DIR="./backups"
BACKUP_RETENTION_DAYS="30"
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_ENABLED="true"
CLEANUP_SCHEDULE="0 3 * * 0"

# Optional security
RECAPTCHA_SECRET=""
GLM_API_KEY="your_glm_api_key_here"
