{
  "name": "@tb/api",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "NODE_ENV=development ts-node-esm src/server.ts",
    "dev:test": "NODE_ENV=test ts-node-esm src/server.ts",
    "build": "tsc -p tsconfig.json",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "npm run test:setup && vitest run",
    "test:setup": "DATABASE_URL=postgresql://postgres:postgres@localhost:5433/tbgroup_test prisma migrate dev --name init && DATABASE_URL=postgresql://postgres:postgres@localhost:5433/tbgroup_test prisma migrate deploy",
    "test:unit": "vitest run src/**/*.test.ts",
    "test:integration": "vitest run tests/**/*.test.ts",
    "test:coverage": "npm run test:setup && vitest run --coverage",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "bootstrap:admin": "ts-node-esm src/scripts/bootstrap-admin.ts",
    "openapi:generate": "tsx src/openapi/generate.ts",
    "test:performance": "vitest run --config=vitest.performance.config.ts",
    "test:security": "vitest run --config=vitest.security.config.ts",
    "test:smoke": "npm run test:e2e tests/smoke.spec.ts"
  },
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "^7.1.0",
    "@prisma/client": "^6.1.0",
    "argon2": "^0.40.1",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-rate-limit": "^7.2.0",
    "helmet": "^7.0.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.8",
    "p-retry": "^6.2.1",
    "pino": "^10.0.0",
    "pino-http": "^11.0.0",
    "swagger-ui-express": "^5.0.0",
    "zod": "^3.25.8"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.1.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/multer": "^1.4.12",
    "@types/nodemailer": "^6.4.14",
    "@types/supertest": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.8",
    "@vitest/coverage-v8": "^2.1.9",
    "@vitest/ui": "^2.1.9",
    "dotenv": "^16.4.5",
    "jsdom": "^24.1.0",
    "prisma": "^6.1.0",
    "supertest": "^7.0.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "vitest": "^2.1.9"
  }
}
