generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Service {
  id           String   @id @default(cuid())
  slug         String   @unique
  title        String
  summary      String
  description  Json?
  heroImageUrl String?
  iconUrl      String?
  order        Int      @default(0)
  cases        Case[]
  banners      Banner[]
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Case {
  id             String          @id @default(cuid())
  slug           String          @unique
  projectTitle   String
  clientName     String
  industry       String?
  summary        String
  challenge      String?
  solution       String?
  results        String?
  metrics        Json?
  category       ServiceCategory
  serviceId      String?
  service        Service?        @relation(fields: [serviceId], references: [id], onDelete: SetNull)
  heroImageUrl   String?
  videoUrl       String?
  published      Boolean         @default(true)
  publishedAt    DateTime?
  media          MediaAsset[]    @relation("CaseMedia")
  reviews        Review[]
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
}

model Review {
  id             String         @id @default(cuid())
  authorName     String
  authorTitle    String?
  company        String?
  quote          String?
  reviewType     ReviewType      @default(TEXT)
  videoUrl       String?
  videoProvider  VideoProvider?
  videoThumbnailUrl String?
  rating         Int?
  isFeatured     Boolean         @default(false)
  isPublished    Boolean         @default(false)
  caseId         String?
  case           Case?           @relation(fields: [caseId], references: [id], onDelete: SetNull)
  media          MediaAsset[]    @relation("ReviewMedia")
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
}

model AboutPage {
  id        String   @id @default(cuid())
  content   Json?
  story    String?
  team     String?
  certifications String?
  partnerships String?
  timeline String?
  offices String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Banner {
  id           String        @id @default(cuid())
  placement    BannerPlacement
  title        String
  subtitle     String?
  ctaLabel     String?
  ctaLink      String?
  serviceId    String?
  service      Service?      @relation(fields: [serviceId], references: [id], onDelete: SetNull)
  mediaItems   BannerMedia[]
  order        Int           @default(0)
  isActive     Boolean       @default(true)
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
}

model Setting {
  key       String   @id
  value     Json?
  updatedAt DateTime @updatedAt
}

model AdminUser {
  id            String     @id @default(cuid())
  email         String     @unique
  passwordHash  String
  displayName   String?
  role          AdminRole  @default(ADMIN)
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  refreshTokens RefreshToken[]
}

model ContactRequest {
  id              String          @id @default(cuid())
  fullName        String
  email           String
  phone           String?
  company         String?
  message         String?
  serviceInterest ServiceCategory?
  status          ContactStatus   @default(NEW)
  source          String?         @default("website")
  metadata        Json?
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  leads           LeadLog[]
  emailLogs       EmailNotificationLog[]
}

model MediaAsset {
  id        String   @id @default(cuid())
  url       String
  type      MediaType
  altText   String?
  mimeType  String?
  size      Int?
  metadata  Json?
  caseId    String?
  case      Case?    @relation("CaseMedia", fields: [caseId], references: [id], onDelete: Cascade)
  reviewId  String?
  review    Review?  @relation("ReviewMedia", fields: [reviewId], references: [id], onDelete: Cascade)
  bannerMedia BannerMedia?
  createdAt DateTime @default(now())
}

model BannerMedia {
  id        String      @id @default(cuid())
  bannerId  String      @unique
  banner    Banner      @relation(fields: [bannerId], references: [id], onDelete: Cascade)
  mediaId   String      @unique
  media     MediaAsset  @relation(fields: [mediaId], references: [id], onDelete: Cascade)
  order     Int         @default(0)
  createdAt DateTime    @default(now())
}

model LeadLog {
  id               String         @id @default(cuid())
  externalId       String?
  status           LeadStatus     @default(PENDING)
  payload          Json
  response         Json?
  error            String?
  contactRequestId String?        @unique
  contactRequest   ContactRequest? @relation(fields: [contactRequestId], references: [id], onDelete: Cascade)
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt
}

model EmailNotificationLog {
  id               String         @id @default(cuid())
  contactRequestId String?        
  contactRequest   ContactRequest? @relation(fields: [contactRequestId], references: [id], onDelete: Cascade)
  recipients       Json
  subject          String?
  payload          Json
  status           EmailStatus    @default(PENDING)
  attempts         Int            @default(0)
  lastError        String?
  provider         String?
  type             String         @default("notification")
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt
  
  @@index([status])
  @@index([type])
  @@index([createdAt])
}

model AnalyticsEvent {
  id                String   @id @default(cuid())
  eventName         String
  category          String?
  action            String?
  label             String?
  value             Int?
  userId            String?
  sessionId         String?
  userAgent         String?
  ip                String?
  referrer          String?
  url               String?
  customDimensions  Json     @default("{}")
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  
  @@index([eventName])
  @@index([category])
  @@index([createdAt])
}

model PageView {
  id         String   @id @default(cuid())
  url        String
  title      String?
  referrer   String?
  userId     String?
  sessionId  String?
  userAgent  String?
  ip         String?
  createdAt  DateTime @default(now())
  
  @@index([url])
  @@index([createdAt])
}

model RefreshToken {
  id           String     @id @default(cuid())
  tokenHash    String     @unique
  adminUserId  String
  adminUser    AdminUser  @relation(fields: [adminUserId], references: [id], onDelete: Cascade)
  expiresAt    DateTime
  createdAt    DateTime   @default(now())
  revokedAt    DateTime?
  replacedById String?
  replacedBy   RefreshToken? @relation("TokenReplacement", fields: [replacedById], references: [id])
  replacements RefreshToken[] @relation("TokenReplacement")
}

enum ServiceCategory {
  MY_SKLAD
  BITRIX24
  TELEPHONY
  OTHER
}

enum ReviewType {
  TEXT
  VIDEO
}

enum VideoProvider {
  YOUTUBE
  VIMEO
  HOSTED
}

enum BannerPlacement {
  HOME_HERO
  CTA_PRIMARY
  CTA_SECONDARY
}

enum AdminRole {
  SUPER_ADMIN
  ADMIN
  EDITOR
}

enum ContactStatus {
  NEW
  IN_PROGRESS
  CLOSED
}

enum MediaType {
  IMAGE
  VIDEO
  DOCUMENT
}

enum LeadStatus {
  PENDING
  SENT
  FAILED
}

enum EmailStatus {
  PENDING
  SENT
  FAILED
}
